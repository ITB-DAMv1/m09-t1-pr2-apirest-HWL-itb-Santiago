@page
@model Client.Pages.SigninAdminModel
@{
    ViewData["Title"] = "Registre";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Registra't</h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Signin.Name" class="form-label"></label>
                    <input asp-for="Signin.Name" class="form-control" />
                    <span asp-validation-for="Signin.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Signin.Surname" class="form-label"></label>
                    <input asp-for="Signin.Surname" class="form-control" />
                    <span asp-validation-for="Signin.Surname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Signin.Email" class="form-label"></label>
                    <input asp-for="Signin.Email" class="form-control" />
                    <span asp-validation-for="Signin.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Signin.Password" class="form-label"></label>
                    <input type="password" asp-for="Signin.Password" class="form-control" />
                    <span asp-validation-for="Signin.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Crear compte</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}